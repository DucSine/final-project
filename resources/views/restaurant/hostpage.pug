extends ../layouts/rescommon.pug
block header
  link(rel='stylesheet' href='../../css/hostpage.css')
  nav.navbar.navbar-light.bg-primary
    a.navbar-brand(href='/res/hostpage')
      img(src='https://res.cloudinary.com/ducsine/image/upload/v1619047971/logo.png' width='200px' height='100px')
    .div-inline(style='width: 280px')
      a.notification(href='#')
        i.fa.fa-bell(style='font-size:30px;')
        span.badge 0
      img.avatar(src='https://picsum.photos/200' width='70px' height='70px')
      b  #{restaurant.resName}
  .user-container
    a#a_usInfo.text-primary Thông tin cửa hàng
    a#a_usChangePass.text-primary Đổi mật khẩu
    button#btn_logout.btn.btn-danger Đăng xuất
  script(src='../../js/accContainer.js')

  
  #accountInfo.modal.accountInfo-modal
    form.modal-content.accountInfo-modal-content.animate(action='/teet/login' enctype='multpart/form-data' method='post')
      div(style='background-color:#f1f1f1; text-align: center;')
        label.text-primary
          b(style='font-size: xx-large;') Thông tin cửa hàng
      .container
        .row(style='padding:16px')
          .col-sm-9
            .form-group
              label(for='restaurantName')
                b Tên nhà hàng
              input#restaurantName.form-control(type='text' name='restaurantName' placeholder='Nhập tên nhà hàng' required='')
            .form-group
              label(for='restaurantName')
                b Loại hình kinh doanh
              input#restaurantName.form-control(type='text' name='restaurantName' placeholder='Nhập tên nhà hàng' required='')
            .form-group
              label(for='email')
                b Email
              p
                label(for='email')
                  b Email@email.com
            .form-group
              label(for='phone')
                b Điện thoại
              input#phone.form-control(type='text' name='phone' placeholder='Nhập số điện thoại' pattern='[A-Za-z0-9]{8,30}' title='Mật khẩu không chứa ký tự đặc biệt, gồm 8-30 ký tự' required='')
            .form-group
              label(for='address')
                b Địa chỉ
              input#address.form-control(type='text' name='phone' placeholder='Nhập số điạ chỉ' pattern='[A-Za-z0-9]{8,30}' title='Mật khẩu không chứa ký tự đặc biệt, gồm 8-30 ký tự' required='')
          .col-sm-3
            .form-group
              img#show_image.img.img-thumbnail.img-circle(width='300' height='300')
            .form-group
              input#image.form-control(type='file' name='image')
        .form-group(style='padding-top: 24px; padding-left: 48px; padding-right: 48px;')
          span
            button#btn_update.btn.btn-primary(type='submit') Cập nhật
          span(style='float: right')
            button.btn.btn-danger(type='button' onclick="document.getElementById('accountInfo').style.display='none'") Thoát
      .container(style='background-color:#f1f1f1')
  
  
  #accountChangePass.modal.changepass-modal
    form.modal-content.changepassmodal-content.animate(action='/teet/login' enctype='multpart/form-data' method='post')
      div(style='background-color:#f1f1f1; text-align: center;')
        label.text-primary
          b(style='font-size: xx-large;') Đổi mật khẩu
      .container
        .form-group
          label(for='password')
            b Mật khẩu cũ
          input#password.form-control(type='password' name='password' placeholder='Nhập mật khẩu cũ' pattern='[A-Za-z0-9]{8,30}' title='Mật khẩu không chứa ký tự đặc biệt, gồm 8-30 ký tự' required='')
        .form-group
          label(for='newPassword')
            b Mật khẩu mới
          input#newPassword.form-control(type='password' name='newPassword' placeholder='Nhập mật khẩu mới' pattern='[A-Za-z0-9]{8,30}' title='Mật khẩu không chứa ký tự đặc biệt, gồm 8-30 ký tự' required='')
        .form-group
          label(for='passwordConfirm')
            b Xác nhận mật khẩu
          input#passwordConfirm.form-control(type='password' name='passwordConfirm' placeholder='Nhập lại mật khẩu' pattern='[A-Za-z0-9]{8,30}' title='Mật khẩu không chứa ký tự đặc biệt, gồm 8-30 ký tự' required='')
      .form-group(style='padding: 32px 48px 32px 48px')
        span
          button#btn_update.btn.btn-primary(type='submit') Cập nhật
        span(style='float: right')
          button.btn.btn-danger(type='button' onclick="document.getElementById('accountChangePass').style.display='none'") Thoát
      .container(style='background-color:#f1f1f1')
  script(src='../../js/account_info.js')
  

block sidebar
  h4 ResName
      ul.nav.nav-pills.flex-column
        li.nav-item
          a.nav-link(href='#section1') Trang chủ
        li.nav-item
          a.nav-link.active(href='#section2') Sản Phẩm
        li.nav-item
          a.nav-link(href='#section3') Quản lý đơn hàng
        li.nav-item
          a.nav-link(href='#section3') Mã giảm giá
  script(src='../../js/res.sidebar.js')
block content
  